<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <!-- Interceptor specifico per questo plugin -->
  <bean id="pluginItalyInterceptor" class="org.parancoe.plugins.italy.ItalyInterceptor"/>

  <!--                           -->
  <!-- Configurazione del plugin -->
  <!--                           -->
  <bean id="pluginItalyConfig" class="org.parancoe.web.plugin.WebPlugin">
    <property name="name" value="parancoe-plugin-italy"/>
    <property name="interceptors">
      <list>
        <ref bean="pluginItalyInterceptor"/>
        <!-- <ref bean="pluginItalyInterceptor2"/> -->
      </list>
    </property>
  </bean>
</beans>
