<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:parancoe="http://www.parancoe.org/schema/parancoe"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.parancoe.org/schema/parancoe http://www.parancoe.org/schema/parancoe.xsd">

  <!-- Interceptor specifico per questo plugin -->
  <bean id="pluginSampleInterceptor" class="org.parancoe.plugins.sample.SampleInterceptor"/>

  <!--                           -->
  <!-- Configurazione del plugin -->
  <!--                           -->
  <bean id="pluginSampleConfig" class="org.parancoe.web.plugin.Plugin">
    <property name="name" value="parancoe-plugin-sample"/>
    <property name="interceptors">
      <list>
        <ref bean="pluginSampleInterceptor"/>
        <!-- <ref bean="pluginSampleInterceptor2"/> -->
      </list>
    </property>
  </bean>
</beans>
